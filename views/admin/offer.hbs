<script>
    function deleteOffer(offerId,offerCat){
        $.ajax({
            url:'/admin/deleteOffer',
            data:{
                offId:offerId,
                category:offerCat
            },
            method:'post',
            success:(response)=>{
               location.reload();
            }
        })
    }


    function offerApplied(productID){
        let st=document.getElementById(productID)
        let offername=st.options[st.selectedIndex].text
       
        $.ajax({
               url:'/admin/applyOffer',
               data:{
                productID,
                offername
               },
               method:'post',
               success:(response)=>{
                if(response){
                    location.reload();
                }
                
               }
        })
    }


</script>
