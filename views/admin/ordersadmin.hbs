<script>
    function changeStatus(orderId) {
        let st = document.getElementById(orderId)
        let stat = st.options[st.selectedIndex].text
        console.log(stat)
        $.ajax({
            url: '/admin/changeStatus',
            data: {
                Order: orderId,
                stat: stat
            },
            method: 'post',
            success: (response) => {
                alert('status changed')
            }


        })
    }

</script>

