<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Thanks for your Order, <span
                                style="color: #a8729a;">{{user.Firstname}}</span>!
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
                            <p class="small text-muted mb-0">Receipt Voucher : {{order._id}}</p>
                        </div>
                        <div class="card shadow-0 border mb-4">

                            <div class="card-body">
                                {{#each products}}
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="/admin/productimage/{{this.product._id}}.jpg" class="img-fluid"
                                            alt="Phone">
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0"></p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.product.productName}}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small"></p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">
                                            Quantity-</p>
                                        <p class="text-muted mb-0 small">
                                            {{this.quantity}}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">â‚¹{{this.product.MRP}}</p>
                                    </div>
                                </div>
                                {{/each}}
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2">
                                        <p class="text-muted mb-0 small">Track Order</p>
                                    </div>
                                    {{#if placed}}
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 16%; border-radius: 16px; background-color: #a8729a;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivery</p>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{#if shipped}}
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar" style="width: 46%; border-radius: 16px; background-color: #a8729a;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivery</p>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{#if cancelled}}
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 100%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65" aria-valuemin="0"
                                                aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivery</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Cancelled</p>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{#if delivered}}
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar" style="width: 81%; border-radius: 16px; background-color: #a8729a;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivery</p>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{#if returned}}
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar" style="width: 100%; border-radius: 16px; background-color: #a8729a;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivery</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Return requested</p>
                                        </div>
                                    </div>
                                    {{/if}}
                                    </div>
                                    </div>
                                    </div>

                        {{#if placed}}
                        <div style="margin-left: 550px;">
                            <td class="remove-pr ">
                                <button type="button" class="btn btn-danger" onclick=" sweetalertremove('{{order._id}}')">Cancel
                                    order</button>
                            </td>
                        </div>
                        {{/if}}
                        {{#if shipped}}
                        <div style="margin-left: 550px;">
                            <td class="remove-pr ">
                                <button type="button" class="btn btn-danger" onclick=" sweetalertremove('{{order._id}}')">Cancel
                                    order</button>
                            </td>
                        </div>
                        {{/if}}
                        {{#if delivered}}
                        <div style="margin-left: 550px;">
                            <td class="remove-pr ">
                                <button type="button" class="btn btn-danger" onclick=" sweetalertremove1('{{order._id}}')">Return
                                    order</button>
                            </td>
                        </div>
                        {{/if}}
                        <div class="d-flex justify-content-between">
                            <p class="text-muted mb-0">Invoice Date : {{order.date}}</p>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>

    function cancelOrder(orderId) {
        $.ajax({
            url: '/cancel-Order/' + orderId,
            method: 'get',
            success: (response) => {

            }
        })
    }


    function sweetalertremove(orderId) {
        console.log('12345')
        swal({
            title: "Are you sure?",
            text: "Once cancelled, you will not be able to recover this product!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    cancelOrder(orderId);
                    swal("Product has been cancelled!", {
                        icon: "success",
                    }).then(() => {
                        location.reload()
                    });
                } else {
                    swal("product is safe!");
                }
            });
    }

    function returnOrder(orderid) {
        $.ajax({
            url: '/return-Order/' + orderid,
            method: 'get',
            success: (response) => {

            }
        })
    }

    function sweetalertremove1(orderid) {
        console.log('12345')
        swal({
            title: "Are you sure?",
            text: "Once returned, you will not be able to get this product!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    returnOrder(orderid);
                    swal("return requested!", {
                        icon: "success",
                    }).then(() => {
                        location.reload()
                    });
                } else {
                    swal("product is safe!");
                }
            });
    }


</script>